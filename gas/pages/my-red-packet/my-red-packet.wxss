.demo {
  width: 100%;
  height: 180px;
  text-align: center;
}

.demo view {
  position: relative;
  width: 30%;
  height: 100%;
  margin-right: 3%;
  background: #f60;
  display: inline-block;
}

.demo view:before {
  content: "";
  position: absolute;
  left: 0px;
  top: 0;
  width: 10px;
  height: 100%;
}

.demo view:before, .demo view:after {
  content: "";
  position: absolute;
  top: -20px;
  display: block;
  width: 10px;
  height: 100%;
  margin-top: 20px;
  background-size: 20px 10px;
}

.demo view:before {
  left: -10px;
  background-color: #fff;
  background-position: 100% 35%;
  background-image: radial-gradient(circle, #f60 50%, transparent),
                      radial-gradient(circle, #f60 25%, transparent 25%, transparent),
                      radial-gradient(circle, transparent 75%, #f60 75%),
                      radial-gradient(circle, transparent 75%, #f60 75%);
}

.demo view:after {
  right: -10px;
  background-color: #f60;
  background-position: 100% 15%;
  background-image: linear-gradient(-45deg, #fff 25%, transparent 25%, transparent),
                      linear-gradient(-135deg, #fff 25%, transparent 25%, transparent),
                      linear-gradient(-45deg, transparent 75%, #fff 75%),
                      linear-gradient(-135deg, transparent 75%, #fff 75%);
}
