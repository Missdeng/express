/* pages/my/my.wxss */


.container {
  z-index: 9999;
  height: 100vh;
}

.container .header-bg {
  filter: blur(3px);
  width: 100%;
  height: 35vh;
  z-index: -1;
}

/*头部  */

.header {
  position: relative;
  height: 36vh;
  top: -36vh;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

/*用户头像  */

.header .user-header {
  margin-left: 1rem;
  width: 3rem;
  height: 3rem;
  border-radius: 1.5rem;
  border: 0.1rem solid #e2e2e2;
  overflow: hidden;
  text-align: center;
  background: #fff;
}

.user-header image {
  width: 3rem;
  height: 3rem;
}

/*用户信息部分  */

.header .user-info {
  margin-left: 0.5rem;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  color: #dadada;
  font-size: 1rem;
}

.header .right {
  flex: 1;
  margin-right: 1rem;
  display: flex;
  justify-content: flex-end;
}

.content {
  position: relative;
  top: -45vh;
}

/*卡片  */

.content .card {
  height: 15vh;
  background: #fff;
  margin-left: 1rem;
  margin-right: 1rem;
  border-radius: 0.3rem;
  box-shadow: 0.05rem 0.05rem 0.05rem rgba(255, 255, 255, 0.32);
  display: flex;
  flex-direction: row nowrap;
  justify-content: space-around;
  align-content: center;
  align-items: center;
}

.card .card-item {
  flex: 1;
  line-height: 5vh;
  border-right: 0.01rem solid #e2e2e2;
  text-align: center;
}

.card-item:last-child {
  border-right: none;
}

.card-item .size {
  font-size: 1rem;
  font-weight: 600;
  color: rgba(0, 0, 0, 0.8);
}

.card-item .name {
  font-size: 0.75rem;
  color: #c4c4c4;
}

.list {
  background: #fff;
  margin-top: 3vh;
}

.list .list-item {
  display: flex;
  line-height: 10vh;
  justify-content: flex-start;
  align-items: center;
  border-top: 1px solid #e2e2e2;
  padding-left: 1rem;
}

.list-item:first-child {
  border: none;
}

.list-item .icon {
  width: 1rem;
  height: 1rem;
}

.list-item .text {
  margin-left: 0.5rem;
  font-size: 0.75rem;
}

.list-item .arrow-2 {
  flex: 1;
  margin-right: 1rem;
  display: flex;
  justify-content: flex-end;
}
