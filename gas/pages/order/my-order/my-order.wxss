/* pages/order/my-order/my-order.wxss */

.container {
  margin-top: 2vh;
}

.list {
  background: #fff;
  font-size: 12px;
  box-shadow: 0.01rem 0.01rem 0.01rem rgba(255, 255, 255, 0.5);
  margin-top: 2vh;
}

.list .list-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-top: 1px solid #e2e2e2;
  padding-left: 1rem;
  padding-right: 1rem;
}

.list-item:first-child {
  border: none;
}

/*订单企业名称  */

.list-item > .name, .date {
}

.sub-list {
  font-size: 12px;
  width: 100%;
}

.sub-list > .sub-list-item {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

.sub-list-item > .amount {
  flex: 1;
  display: flex;
  justify-content: flex-end;
}

.list-item > .detail {
  flex: 1;
  display: flex;
  justify-content: flex-end;
}
