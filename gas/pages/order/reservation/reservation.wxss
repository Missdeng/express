.item-btn {
  flex: 1;
  text-align: center;
  border-right: 1px solid #e2e2e2;
}

.item-btn:last-child {
  border: none;
}

.item-btn:active {
  background: rgba(169, 169, 169, 0.2);
}

.list-item-btn {
  display: flex;
  line-height: 8vh;
  justify-content: space-between;
  align-items: center;
  border-top: 1px solid #e2e2e2;
}
